{{!-- 
    Partial: Footer - Admin Layout
 --}}

<!-- Scroll Top -->
<div class="scrollTop"><span class="far fa-caret-square-up iconScrollTop" ></span></div>
<!-- Footer -->
<footer class="mt-auto" id="contact">
    <div class="container">
        <!-- Contact & Google Map -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <!-- Title Contact -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-form">
                            <h2>Contactez-Nous</h2>
                        </div>
                    </div>
                </div>
                <!-- Contact Form -->
                <form method="post" action="/contact">
                    <!-- Name & Email Input -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-form">

                                <input class="form-control" name="name" type="text" placeholder="Nom" {{#each contact}} {{#ifstatus param 'name' }} style="border: 2px solid #dc3545;" {{/ifstatus }} {{/each }}>
                                {{#each contact}}
                                    {{#ifstatus param 'name'}}
                                        <div class="text-danger">
                                            <p class="m-0 mt-1" style="font-size: 1rem; font-weight: 500;">* {{ msg }}</p>
                                        </div>
                                    {{/ifstatus }}
                                {{/each }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-form">
                                <input class="form-control" name="email" type="email" placeholder="Email" {{#each contact}} {{#ifstatus param 'email' }} style="border: 2px solid #dc3545;" {{/ifstatus }} {{/each }}>
                                {{#each contact}}
                                {{#ifstatus param 'email'}}
                                    <div class="text-danger">
                                        <p class="m-0 mt-1" style="font-size: 1rem; font-weight: 500;">* {{ msg }}</p>
                                    </div>
                                {{/ifstatus }}
                                {{/each }}
                            </div>
                        </div>
                    </div>
                    <!-- Subject Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="subject" type="text" placeholder="sujet" {{#each contact}} {{#ifstatus param 'subject' }} style="border: 2px solid #dc3545;" {{/ifstatus }} {{/each }}>
                                {{#each contact}}
                                {{#ifstatus param 'subject'}}
                                    <div class="text-danger">
                                        <p class="m-0 mt-1" style="font-size: 1rem; font-weight: 500;">* {{ msg }}</p>
                                    </div>
                                {{/ifstatus }}
                                {{/each }}
                            </div>
                        </div>
                    </div>
                    <!-- Message Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <textarea class="form-control" name="message" placeholder="Message" {{#each contact}} {{#ifstatus param 'message' }} style="border: 2px solid #dc3545;" {{/ifstatus }} {{/each }}></textarea>
                                {{#each contact}}
                                {{#ifstatus param 'message'}}
                                    <div class="text-danger">
                                        <p class="m-0 mt-1" style="font-size: 1rem; font-weight: 500;">* {{ msg }}</p>
                                    </div>
                                {{/ifstatus }}
                                {{/each }}
                            </div>
                        </div>
                    </div>
                    <!-- Button Contact -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form text-center">
                                <button class="btn btn-outline-light ms-2 me-2 mb-2">Envoyer<i class="fas fa-paper-plane ms-1"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Google Map -->
            <div class="col-md-6">
                <iframe
                    title="Japan Zone"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d18175.56305755959!2d2.3387134943029784!3d48.860150767296595!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e03bac620b7%3A0x45839741fd08016e!2sPalais%20des%20Th%C3%A9s!5e0!3m2!1sfr!2sfr!4v1636463604133!5m2!1sfr!2sfr"
                    width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
    <!-- Copyright -->
    <div class="copyright">
        <p>Tout Droit réserver à Japan Zone - 2021. <a href="/mention-legales" class="text-white">Mentions Légale</a></p>
    </div>
</footer>

{{#if contact}}
    <script>

        function pageScroll() {
            window.scrollBy(0,10000);
        }
        setTimeout('pageScroll()', 0); 

    </script>
{{/if }}