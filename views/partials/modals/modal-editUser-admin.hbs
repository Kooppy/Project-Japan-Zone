{{!--
Partial: Modal Admin Edit User
--}}

<!-- Modal User & Create & Edit & Delete -->
<div class="modal fade" id="editUser{{ this.num_user }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/admin/user/{{ this.num_user }}?_method=PUT"
                    enctype="multipart/form-data" >
                    <!-- Pseudo Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="pseudo" type="text" placeholder="Pseudo" value="{{ this.pseudo }}">
                            </div>
                        </div>
                    </div>
                    <!-- Avatar Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div id="avatar" class="rounded mx-auto d-block mb-3 " style="height: 125px; width: 125px; background-image: url('{{this.link_picture}}'); background-position:center; background-size:cover; ">
                                <input id="change" onclick="changeImg()" name="picUser" type="file"
                                    style="opacity: 0.0; width: 100%; height:100%;" />
                             </div>
                        </div>
                    </div>
                    <!-- Email Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="email" type="email" placeholder="Email" value="{{ this.email }}">
                            </div>
                        </div>
                    </div>
                    <!-- Last Name & First Name Input -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-form">
                                <input class="form-control" name="name" type="text" placeholder="Nom" value="{{ this.name }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-form">
                                <input class="form-control" name="first_name" type="text" placeholder="Prénom" value="{{ this.first_name }}">
                            </div>
                        </div>
                    </div>
                    <!-- Address Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="address" type="text" placeholder="Adresse" value="{{ this.address }}">
                            </div>
                        </div>
                    </div>
                    <!-- City & Postal Code Input -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-form">
                                <input class="form-control" name="city" type="text" placeholder="Ville" value="{{ this.city }}">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="contact-form">
                                <input class="form-control" name="postal_code" type="text"
                                    placeholder="Code Postale" value="{{ this.postal_code }}">
                            </div>
                        </div>
                    </div>
                    <!-- Phone Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="phone" type="text" placeholder="Téléphone" value="{{ this.phone }}">
                            </div>
                        </div>
                    </div>
                    <!-- Civility Input --> 
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <select class="form-select" name="civility" id="selected{{ this.num_user }}">
                                    <option value='' selected>Sélectionner...</option>
                                    <option value="M">Mâle</option>
                                    <option value="F">Femelle</option>
                                    <option value="A">Autre</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- Description Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <textarea class="form-control" name="description" placeholder="Description">{{ this.description }}</textarea>
                            </div>
                        </div>
                    </div>
                    <!-- New Password Input -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <input class="form-control" name="password" type="password"
                                    placeholder="Nouveau Mot de Passe">
                            </div>
                        </div>
                    </div>
                    <!-- Verify / Admin Check -->
                    <div class="d-flex justify-content-center mb-3 flex-wrap">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckboxVerify">
                                Vérifier
                            </label>
                            <input class="form-check-input" type="checkbox" name="isVerify" id="isVerify{{ this.num_user }}">
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckboxAdmin">
                                Admin
                            </label>
                            <input class="form-check-input" type="checkbox" name="isAdmin" id="isAdmin{{ this.num_user }}">
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckboxBan">
                                Ban
                            </label>
                            <input class="form-check-input" type="checkbox" name="isBan" id="isBan{{ this.num_user }}">
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckboxArchiving">
                                Archiver
                            </label>
                            <input class="form-check-input" type="checkbox" name="isArchiving" id="isArchiving{{ this.num_user }}">
                        </div>
                    </div>
                    <!-- Button Input-->
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button class="btn btn-secondary">Envoyer</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Modal Footer Social -->
            <div class="modal-footer justify-content-center">
                <p>Suivez-nous : </p>
                <ul class="social-footer">
                    <li><a class="social-footer-block social-facebook" href=""><span
                                class="fab fa-facebook-square"></span></a></li>
                    <li><a class="social-footer-block social-twitter" href=""><span
                                class="fab fa-twitter"></span></a></li>
                    <li><a class="social-footer-block social-youtube" href=""><span
                                class="fab fa-youtube"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>

    function changeImg() {
        let input = document.getElementById('change')

        input.onchange = evt => {

            const [file] = input.files
            if (file) {
                document.getElementById('avatar').style.backgroundImage = `url('${URL.createObjectURL(file)}')`
            }
        }
    }
    
    // isAdmin
    const isAdmin{{ this.num_user }} = document.getElementById('isAdmin{{ this.num_user }}')
    const adm{{ this.num_user }} = {{ isAdmin }}
    if ( adm{{ this.num_user }} === 1 ) isAdmin{{ this.num_user }}.checked = true
    // isVerified 
    const isVerify{{ this.num_user }} = document.getElementById('isVerify{{ this.num_user }}')
    const vrf{{ this.num_user }} = {{ isVerify }} 
    if ( vrf{{ this.num_user }} === 1 ) isVerify{{ this.num_user }}.checked = true
    // isBan
    const isBan{{ this.num_user }} = document.getElementById('isBan{{ this.num_user }}')
    const ban{{ this.num_user }} = {{ isBan }} 
    if ( ban{{ this.num_user }} === 1 ) isBan{{ this.num_user }}.checked = true
    // isArchiving
    const isArchiving{{ this.num_user }} = document.getElementById('isArchiving{{ this.num_user }}')
    const archiving{{ this.num_user }} = {{ isArchiving }} 
    if ( archiving{{ this.num_user }} === 1 ) isArchiving{{ this.num_user }}.checked = true


</script> 