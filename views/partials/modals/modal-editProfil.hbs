<!-- Modal User & Create & Edit & Delete -->
<div class="modal fade" id="editProfil{{ data.pseudo }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{#if modalEditProfil}}
                    {{> flash/flash-modal data=modalEditProfil }}
                {{/if}}
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h3 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Profil
                        </button>
                        </h3>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <form method="post" action="/profil/{{ data.pseudo }}?_method=PUT"
                                    enctype="multipart/form-data" >
                                    <!-- Pseudo Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <input class="form-control" name="pseudo" type="text" placeholder="Pseudo" value="{{ data.pseudo }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Avatar Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div id="avatar" class="rounded mx-auto d-block mb-3 " style="height: 125px; width: 125px; background-image: url('../{{data.link_picture}}'); background-position:center; background-size:cover; ">
                                                <input id="changeUser" onclick="changeImg()" name="picUser" type="file"
                                                    style="opacity: 0.0; width: 100%; height:100%; cursor: pointer; " />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Email Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <input class="form-control" name="email" type="email" placeholder="Email" value="{{ data.email }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Description Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <textarea class="form-control" name="description" placeholder="Description">{{ data.description }}</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Button Input-->
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <button class="btn btn-outline-dark ms-2 me-2 mb-2">Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h3 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Complément profil
                        </button>
                        </h3>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <form method="post" action="/profil/{{ data.pseudo }}?_method=PUT"
                                    enctype="multipart/form-data" >
                                    <!-- Last Name & First Name Input -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="contact-form">
                                                <input class="form-control" name="name" type="text" placeholder="Nom" value="{{ data.name }}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="contact-form">
                                                <input class="form-control" name="first_name" type="text" placeholder="Prénom" value="{{ data.first_name }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Civility Input --> 
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <select class="form-select" name="civility" id="selected">
                                                    <option value='' selected>Sélectionner...</option>
                                                    <option value="M">Mâle</option>
                                                    <option value="F">Femelle</option>
                                                    <option value="A">Autre</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Button Input-->
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <button class="btn btn-outline-dark ms-2 me-2 mb-2">Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h3 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Complément adresse
                        </button>
                        </h3>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <form method="post" action="/profil/{{ data.pseudo }}?_method=PUT"
                                    enctype="multipart/form-data" >
                                    <!-- Address Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <input class="form-control" name="address" type="text" placeholder="Adresse" value="{{ data.address }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- City & Postal Code Input -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="contact-form">
                                                <input class="form-control" name="city" type="text" placeholder="Ville" value="{{ data.city }}">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="contact-form">
                                                <input class="form-control" name="postal_code" type="text"
                                                    placeholder="Code Postale" value="{{ data.postal_code }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Phone Input -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="contact-form">
                                                <input class="form-control" name="phone" type="text" placeholder="Téléphone" value="{{ data.phone }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Button Input-->
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <button class="btn btn-outline-dark ms-2 me-2 mb-2">Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Footer Social -->
            <div class="modal-footer justify-content-center">
                <p>Suivez-nous : </p>
                <ul class="social-footer">
                    <li><a class="social-footer-block social-facebook" href=""><span
                                class="fab fa-facebook-square"></span></a></li>
                    <li><a class="social-footer-block social-twitter" href=""><span
                                class="fab fa-twitter"></span></a></li>
                    <li><a class="social-footer-block social-youtube" href=""><span
                                class="fab fa-youtube"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>

    function changeImg() {
        let input = document.getElementById('changeUser')

        input.onchange = evt => {

            const [file] = input.files
            if (file) {
                document.getElementById('avatar').style.backgroundImage = `url('${URL.createObjectURL(file)}')`
            }
        }
    }

</script> 