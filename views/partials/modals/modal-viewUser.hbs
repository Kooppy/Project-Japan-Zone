{{!--
Partial: Modal Admin View User
--}}

<!-- Modal User & Create & Edit & Delete -->
<div class="modal fade" id="viewUser{{ this.num_user }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Nav Tabs -->
                <ul class="nav nav-tabs" id="#myTab" role="tablist">
                    <li class="nav-item" role="viewUser">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profilUser"
                            aria-controls="profilUser" aria-selected="true" type="button">Profil</button>
                    </li>
                    <li class="nav-item" role="editUser">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#editUser"
                            aria-controls="editUser" aria-selected="false" type="button">Editer</button>
                    </li>
                </ul>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Tab Content Login / Register -->
            <div class="tab-content" id="myTabContent">
                <!-- Tab Panel View User -->
                <div class="tab-pane show active" id="profilUser" role="tabpanel" aria-labelledby="profil-user-tab">
                    <div class="modal-body">
                        <form>
                            <!-- Username & Password Input :-->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="">
                                        <img src="assets/images/avatar/{{this.link}}" alt="Kooppy">
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="">
                                        <p>Pseudo: {{ this.pseudo }}</p>
                                        <p>Email: {{ this.email }}</p>
                                        <p>Nom: {{ this.name }}</p>
                                        <p>Prénom: {{ this.first_name }}</p>
                                        <p>Adresse: {{ this.address }}</p>
                                        <p>Code Postale: {{ this.postal_code }}</p>
                                        <p>Ville: {{ this.city }}</p>
                                        <p>Téléphone: {{ this.phone }}</p>
                                        <p>Civilité: {{ this.civility }}</p>
                                        <p>Description: {{ this.description }}</p>
                                        <p>isVerify: {{ this.isVerify }}</p>
                                        <p>isAdmin: {{ this.isAdmin }}</p>
                                        <p>isBan: {{ this.isBan }}</p>
                                        <p>isArchiving: {{ this.isArchiving }}</p>
                                        <p>Date de Création de Compte : {{ this.confirmation_date }}</p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Tab Panel Edit User -->
                <div class="tab-pane fade" id="editUser" role="tabpanel" aria-labelledby="edit-user-tab">
                    <div class="modal-body">
                        <form method="post" action="/admin/user/{{ this.num_user }}?_method=PUT"
                            enctype="multipart/form-data">
                            <!-- Id & Avatar Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" type="file" name="picUser" placeholder="Image">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="pseudo" type="text" placeholder="Pseudo">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="email" type="email" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                            <!-- Last Name & First Name Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="name" type="text" placeholder="Nom">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="first_name" type="text" placeholder="Prénom">
                                    </div>
                                </div>
                            </div>
                            <!-- Address & Postal Code Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="address" type="text" placeholder="Adresse">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="postal_code" type="text"
                                            placeholder="Code Postale">
                                    </div>
                                </div>
                            </div>
                            <!-- City & Phone Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="city" type="text" placeholder="Ville">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="phone" type="text" placeholder="Téléphone">
                                    </div>
                                </div>
                            </div>
                            <!-- Civility & Description Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="civility" type="text" placeholder="Civilité">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="description" type="text"
                                            placeholder="Description">
                                    </div>
                                </div>
                            </div>
                            <!-- New Password Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="password" type="text"
                                            placeholder="Nouveau Mot de Passe">
                                    </div>
                                </div>
                            </div>
                            <!-- isAdmin & isVerify Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="isAdmin" type="text" placeholder="isAdmin">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="isVerify" type="text" placeholder="isVerify">
                                    </div>
                                </div>
                            </div>
                            <!-- isBan & isArchiving Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="isBan" type="text" placeholder="isBan">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="input-form" name="isArchiving" type="text"
                                            placeholder="isArchiving">
                                    </div>
                                </div>
                            </div>
                            <!-- Button Input-->
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-secondary">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Modal Footer Social -->
                <div class="modal-footer justify-content-center">
                    <p>Suivez-nous : </p>
                    <ul class="social-footer">
                        <li><a class="social-footer-block social-facebook" href=""><span
                                    class="fab fa-facebook-square"></span></a></li>
                        <li><a class="social-footer-block social-twitter" href=""><span
                                    class="fab fa-twitter"></span></a></li>
                        <li><a class="social-footer-block social-youtube" href=""><span
                                    class="fab fa-youtube"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>