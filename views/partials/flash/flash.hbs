
{{#if message }}

    <style>
        .darkMod #po {
            color: black;
        }
    </style>

    <div class="position-fixed end-0 translate-middle-y p-3" style="z-index: 9999; top: 13% !important;">
        <div id="po" class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="width: auto;">
            <div class="toast-header">
                <strong class="me-auto">Message automatique</strong>
                <small class="mx-2">A l'instant</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                {{ message }}
            </div>
        </div>
    </div>
    <script>
        var toastDiv = document.getElementById('po')
        setTimeout(() => {
            var toast = new bootstrap.Toast(toastDiv)
            toast.show()
        }, 1000)
    </script>
{{/if }}
