{{!-- 
    Partial: News
 --}}

<!-- Main News -->
<section class="container shadow-lg my-5" id="news">
    <!-- Title Main News -->
    <div class="row">
        <div class="col-md-12">
            <h2>Nos Actualit√©s</h2>
        </div>
    </div>
    <!-- Main News Element -->
    <div class="row align-items-center">
        <!-- List News -->
        <div class="col-md-6">
            <div class="scrollspy-list-news">
                {{#each blog }}
                    <!-- List News -->
                    <div class="row me-0 p-2">
                        <div class="col-6 col-md-5 col-sm-4">
                            <img src="{{ this.link_picture }}" alt="{{ this.name }}">
                        </div>
                        <div class="col-6 col-md-7 col-sm-8">
                            <h3>{{ this.title }}</h3>
                            <p class="text-truncate">{{ this.description }}</p>
                        </div>
                        <p><span class="fas fa-calendar-day"></span> {{ commentDateFormat this.date }}</p>
                    </div>
                {{/each }}
            </div>
        </div>
        {{log blog}}
        <!-- News View -->
        <div class="col-md-6 p-2">
            <img class="actu-view-img" src="{{ blogActive.link_picture }}" alt="{{ blogActive.name }}">
            <h3 class="text-center mt-2">{{ blogActive.title }}</h3>
            <p>{{ blogActive.description }}</p>
            <a href="/blog/{{ blogActive.title }}" class="btn btn-outline-dark ms-2 me-2 mb-2">Lire la suite</a>
            <p class="float-end"><span class="fas fa-calendar-day"></span> {{ commentDateFormat blogActive.date }}</p>
        </div>
    </div>
</section>